{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  #main {
	background-color: {{ section.settings.bgcolor }};
	font-size: {{ section.settings.defaultfontsize }}px;
  }
  #main .section-{{ section.id }}-padding .Container .PageContent {margin-bottom: {{ section.settings.margin_bottom }}px;}
  #main .section-{{ section.id }}-padding .Container .PageHeader {margin-top: {{ section.settings.margin_title_top }}px;}
  #main .section-{{ section.id }}-padding .Container .PageHeader {margin-bottom: {{ section.settings.margin_title_bottom }}px;}
  #main .section-{{ section.id }}-padding .PageHeader .SectionHeader__Heading {font-size: {{ section.settings.defaulttitlefontsize }}px;}

{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
<div class="Container">
  <header class="PageHeader">
    <div class="SectionHeader SectionHeader--center">
      <h1 class="SectionHeader__Heading Heading u-h1">{{ page.title }}</h1>
    </div>
  </header>

  <div class="PageContent PageContent--narrow Rte">
    {{ page.content }}
  </div>
</div>
</div>


{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Colour of Page",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "defaultfontsize",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Default Font Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "defaulttitlefontsize",
      "min": 16,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Default Title Font Size",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Bottom margin",
      "default": 80
    },
    {
      "type": "range",
      "id": "margin_title_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom title margin",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_title_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top title margin",
      "default": 20
    }
  ]
}
{% endschema %}