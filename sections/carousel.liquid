  {%- capture flickity_options -%}
  {
    "prevNextButtons": true,
    "pageDots": false,
    "wrapAround": true,
    "contain": true,
    "cellAlign": "center",
    "watchCSS": false,
    "dragThreshold": 12,
    "groupCells": true,
    "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
  }
  {%- endcapture -%}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="featured-collections">
  <div class="CarouselList CarouselList--carousel Carousel {% if section.settings.add_spacing %}CarouselList--spaced{% endif %}" data-flickity-config='{{ flickity_options }}'>
   
    {%- for block in section.blocks -%}
      {%- include 'carousel-item', apply_overlay: block.settings.apply_overlay -%}
    {%- endfor -%}
   
  </div>
</section>

<style>
  #section-{{ section.id }} .CarouselItem .Heading,
  #section-{{ section.id }} .flickity-page-dots {
    color: {{ section.settings.text_color }};
  }

  #section-{{ section.id }} .CarouselItem__Link {
    color: {{ section.settings.button_color }};
    border-color: {{ section.settings.text_color }};
  }

  #section-{{ section.id }} .CarouselItem__Link::before {
    background-color: {{ section.settings.text_color }};
  }

  @media (-moz-touch-enabled: 0), (hover: hover) {
    #section-{{ section.id }} .CarouselItem__Link:hover {
      color: {{ section.settings.text_color }};
    }
  }
  
    #section-{{ section.id }}  .flickity-prev-next-button {
      top: {{ section.settings.height | minus: 45 | divided_by: 2 | round }}px;
    }
</style>

