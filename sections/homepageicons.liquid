<section class="Section Section--spacingNormal Section-Homepageicon-Blocks" data-section-id="{{ section.id }}" data-section-type="homepageicons">
<div class="Container">
   <div class="Rte" style="text-align: center">
      <div class="row-fluid original-homeware">
{% for block in section.blocks %}
  {%- capture posinrow -%}{% cycle 'desktop-first tablet-first', 'tablet-last', 'desktop-last tablet-first tablet-last' %}{%- endcapture -%}
  {%- capture homepagerow -%}{% cycle 'row-1', 'row-1', 'row-1' %}{%- endcapture -%}
  {%- capture blocksize -%}{% cycle 'span4', 'span4', 'span4' %}{%- endcapture -%}
  {% case block.type %}
    {% when 'homepageicon' %}
	<div class="{{ homepagerow }} {{ blocksize }} {{posinrow}}">
      <div class="slide" {{ block.shopify_attributes }}>
        {%- if block.settings.link != blank -%}<a href="{{ block.settings.link | escape }}" title="{{ block.settings.title | escape }}">{%- endif -%}{{ block.settings.image | image_url: height: 200 | image_tag }}{%- if block.settings.link != blank -%}</a>{%- endif -%}
        <p>
        {%- if block.settings.title != blank -%}
          {%- if block.settings.link != blank -%}<a class="title" href="{{ block.settings.link | escape }}" title="{{ block.settings.title | escape }}">{%- endif -%}{{ block.settings.title }}{%- if block.settings.link != blank -%}</a>{%- endif -%}
        {%- endif -%}
        </p>
      </div>
	</div>
  {% endcase %}
{% endfor %}
        </div>
     </div>
</div>
</section>

{% schema %}
  {
    "name": "Homepage Icons",
    "class": "shopify-section homepageicons",
    "max_blocks": 3,
  "blocks": [
     {
       "name": "Image",
       "type": "homepageicon",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
	{
      "type": "text",
      "id": "title",
      "label": "Title"
    },
	{
      "type": "url",
      "id": "link",
      "label": "Link for Title"
    }
       ]
     }
   ]
  }
{% endschema %}


